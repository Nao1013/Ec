<div class="container">
  <h3>商品編集</h3>
  
  <table>
    <%= form_with model: @product, url: admin_products_path, method: :patch, local: true do |f| %>
    <tr>
      <th><%= f.label :商品画像 %></th>
      <td><%= f.file_field :image,  accept: 'image/*' %></td>
    </tr>
    
    <tr>
      <th><%= f.label :商品名 %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    
    <tr>
      <th><%= f.label :商品説明 %></th>
      <td><%= f.text_area :introduct %></td>
    </tr>
    
    <tr>
      <th><%= f.label :ジャンル %></th>
      <td><%= f.text_field :no_tax %></td>
    </tr>
    
    <tr>
      <th><%= f.label :販売ステータス %></th>
      <td>
        <%= f.radio_button :is_status, true, checked: true %>
        <%= f.label :is_status, "販売中" %>
        <%= f.radio_button :is_status, false %>
        <%= f.label :is_status, "販売停止中" %>
      </td>
    </tr>
    
    <tr>
      <th><%= f.submit "変更する",class:"btn btn-success" %></th>
    </tr>
    <% end %>
  </table>
</div>