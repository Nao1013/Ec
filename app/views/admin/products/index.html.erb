<div class="container">
  
 <div class="row">
   <div>
     <h3>商品一覧</h3>
   </div>
   
   <div class="d-flex justify-content-end">
    <%= link_to new_admin_product_path do %>
       <i class="fas fa-plus-circle"></i>
     <% end %>
   </div>
   
 </div>
  
  <table class=table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.no_tax %></td>
        <td><%= product.genre.name %></td>
        <td><%= product.is_status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>