<div class="container">
  <h3>商品登録</h3>
  <div class="text-center">
    <table>
      <tbody>
        <%= form_with model: @product, url: admin_products_path, local: true do |f| %>
        <tr>
          <th><%= f.label :商品画像 %></th>
          <td><%= f.file_field :image,  accept: 'image/*' %></td>
        </tr>
        
        <tr>
          <th><%= f.label :商品名 %></th>
          <td><%= f.text_field :name, placeholder:"商品名" %></td>
        </tr>
        
        <tr>
          <th><%= f.label :商品説明 %></th>
          <td><%= f.text_area :introduct, placeholder:"商品説明" %></td>
        </tr>
        
        <tr>
          <th><%= f.label :ジャンル %></th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
        </tr>
        
        <tr>
          <th><%= f.label :税抜き価格 %></th>
          <td><%= f.text_field :no_tax %>円</td>
        </tr>
        
        <tr>
          <th><%= f.label :販売ステータス %></th>
          <td>
            <%= f.radio_button :is_status, true, checked: true %>
            <%= f.label :is_status, "販売中" %>
            <%= f.radio_button :is_status, false %>
            <%= f.label :is_status, "販売停止中" %>
          </td>
        </tr>
        
        <tr>
          <th><%= f.submit "登録する",class:"btn btn-success" %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>